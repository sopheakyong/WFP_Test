<%=form_for @student do |f| %>
    
    <div class="card">
    <div class="card-body">
        <h4 class="card-title" style="color:brown;">Student information</h4>
        <hr class="m-t-0 m-b-40"> 
    
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="control-label text-left col-md-4">Student Id</label>
                        <div class="col-md-8">
                            
                            <%=f.text_field :student_id , {class: 'form-control',required: true}%>
    
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="control-label text-left col-md-4">Student Name</label>
                        <div class="col-md-8">
                        <%=f.text_field :student_name , {class: 'form-control'}%>
                        </div>
                    </div>
                </div>
        </div>
    
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="control-label text-left col-md-4">Sex</label>
                        <div class="col-md-8">

                        <%= f.select :sex, options_for_select([["Female","F"],["Male","M"]],:selected => @student.sex), {include_blank: '-- Select One --'}, {class: 'form-control',:required => true}%>
                        
                       
                        
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="control-label text-left col-md-4">Date Birth</label>
                        <div class="col-md-8">
                          
                            <%= f.date_select :date_of_birth ,
                            :order => [:day, :month, :year], 
                            :start_year => 1990, 
                            :end_year =>Time.current.year-6, 
                            :html=>{:class => "input-mini"}
                            %>
                        </div>
                    </div>
                </div>
        </div>
    
      
        <hr class="m-t-0 m-b-40">
    
        <div class="container text-center">              
                <div class="row button-group">    
                
                    <div class="col-lg-2 col-md-3 col-sm-4">
                       
                       <%= button_tag( :class => "btn btn-block btn-outline-success btn-rounded") do %>
                            <i class="fa fa-file-o"></i> <%=@caption_button_student%>
                        <% end %>
                    </div>

                    <% if @caption_button_student=='Update' %>
                        <div class="col-lg-2 col-md-3 col-sm-4">
                        
                            <%= button_tag(:type => 'button', :class => "btn btn-block btn-outline-success btn-rounded", :onclick => "javascript:location.href='#{new_student_path()}'"    ) do %>
                                <i class="fa fa-file-o"> &nbsp;</i> New Student
                            <% end %>


                           

                        </div>
                    <%end%>


                    <div class="col-lg-2 col-md-3 col-sm-4">   
                                          
                            <%= button_tag(:type => 'button', :class => "btn btn-block btn-outline-success btn-rounded", :onclick => "javascript:location.href='#{students_path()}'"    ) do %>
                                <i class="fa fa-search-plus"></i> Go Find
                            <% end %>
                     </div>
        
    
                </div>
                
    
        </div>
    
        
     </div><!-- end card body-->
    </div> <!-- end card -->
    
    
    <%end%>