

<div class="login-register" style="background-image:url(/assets/background/login-register____.jpg);">
<div class="login-box card">
    <div class="card-body">

    <%=form_for(:session, :html=>{class:"form-horizontal form-material", role: "form"},url: login_path) do |f| %>
        <form class="form-horizontal form-material" id="loginform" action="index.html">
            <h3 class="box-title m-b-20">Sign In</h3>
            <div class="form-group ">
                     <div class="col-xs-12">                   
                         <%=f.text_field :user_name , placeholder:"User Name", class: 'form-control',required: true%>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                   
                    <%=f.password_field :password , placeholder:"Password", class: 'form-control',required: true%>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12 font-14">

                <p id=”alert” style="color:red;" style="text-align:center"><%= alert %></p>

                <!--
                    <div class="checkbox checkbox-primary pull-left p-t-0">
                        <input id="checkbox-signup" type="checkbox">
                        <label for="checkbox-signup"> Remember me </label>
                    </div> <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"> Forgot pwd?</a> 
                -->
                </div>
            </div>

            <div class="form-group text-center m-t-20">

                <div class="col-xs-12">
                      
                    <%= button_tag(:type => 'submit', :class => "btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light") do %>
                        Log in
                    <% end %>

                </div>
            </div>

    <%end %>
   



    </div>
</div>
</div>